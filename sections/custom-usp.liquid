<div class="custom-usp section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="custom-usp__heading-container">
        <h2 class="custom-usp__heading">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <div class="custom-usp__subheading-container">
        <div class="custom-usp__subheading rte">{{ section.settings.subheading }}</div>
      </div>
    {% endif %}

    <div class="custom-usp__grid">
      {% for block in section.blocks %}
        <div class="custom-usp__item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="custom-usp__icon-container">
              {{ block.settings.icon | image_url: width: 80 | image_tag:
                class: "custom-usp__icon",
                width: block.settings.icon_width,
                height: block.settings.icon_width,
                alt: block.settings.title | escape
              }}
            </div>
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3 class="custom-usp__title">{{ block.settings.title }}</h3>
          {% endif %}
          
          {% if block.settings.text != blank %}
            <div class="custom-usp__text">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .custom-usp {
    text-align: center;
    background-color: {{ section.settings.background_color }};
    {% comment %} padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px; {% endcomment %}
  }
  
  .custom-usp__heading-container {
    margin-bottom: 16px;
  }
  
  .custom-usp__heading {
    margin: 0;
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
  }
  
  .custom-usp__subheading-container {
    margin-bottom: 32px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .custom-usp__subheading {
    color: {{ section.settings.text_color }};
    margin: 0;
  }
  
  .custom-usp__grid {
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    gap: 30px;
    max-width: 100%;
    margin: 0 auto;
  }
  
  .custom-usp__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 0 0 auto;
    width: calc(33.333% - 20px);
    max-width: 250px;
  }
  
  .custom-usp__icon-container {
    margin-bottom: 16px;
  }
  
  .custom-usp__icon {
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }
  
  .custom-usp__title {
    margin: 0 0 8px 0;
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.title_size }}px;
  }
  
  .custom-usp__text {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.5;
  }
  
  @media screen and (max-width: 749px) {
    .custom-usp__grid {
      gap: 15px;
      justify-content: space-between;
      padding: 0 10px;
      overflow-x: visible;
      flex-wrap: nowrap;
    }
    
    .custom-usp__grid::-webkit-scrollbar {
      display: none;
    }
    
    .custom-usp__item {
      flex: 1 1 33.333%;
      min-width: auto;
      max-width: none;
      width: auto;
      padding: 0;
    }
    
    .custom-usp__icon-container {
      margin-bottom: 10px;
    }
    
    .custom-usp__icon {
      width: auto;
      height: auto;
      max-width: 45px;
      max-height: 45px;
    }
    
    .custom-usp__heading {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }
    
    .custom-usp__title {
      font-size: 14px;
      margin-bottom: 5px;
    }
    
    .custom-usp__text {
      font-size: 12px;
      line-height: 1.3;
    }
  }
</style>

{% schema %}
{
  "name": "USP Features",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ishhaara"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Explore the collection of a variety of versatile jewellery with just a click. let's spice up your fashion game with these stunning pieces of jewellery.</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading Size",
      "default": 32
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 14,
      "max": 28,
      "step": 1,
      "unit": "px",
      "label": "Feature Title Size",
      "default": 18
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Feature Text Size",
      "default": 14
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "range",
          "id": "icon_width",
          "min": 30,
          "max": 100,
          "step": 5,
          "unit": "px",
          "label": "Icon Size",
          "default": 60
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Feature description text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "USP Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Happy Customers",
            "text": "Customer satisfaction is our priority"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Customized Jewellery",
            "text": "Personalized designs just for you"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Premium Packaging",
            "text": "Elegant presentation for all items"
          }
        }
      ]
    }
  ]
}
{% endschema %}
